{
  "hooks": {
    "UserPromptSubmit": [
      {
        "name": "record-user-messages",
        "description": "记录用户发送的消息内容到 session-messages.json",
        "type": "command",
        "command": "node \"{{pluginDir}}/hooks/record-messages.js\""
      }
    ],
    "Stop": [
      {
        "name": "qywx-notification",
        "description": "执行后企微通知",
        "type": "command",
        "command": "curl \"https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=xxxxxxxxxxxxxxxxxxx\" -H \"Content-Type: application/json\" -d \"{\\\"msgtype\\\":\\\"text\\\",\\\"text\\\":{\\\"content\\\":\\\"Claude Code：任务完成\\\"}}\""
      }
    ]
  }
}
