{
  "name": "Bozhu12-plugin",
  "version": "1.0.0",
  "displayName": "Bozhu12-helper",
  "description": "常用开发功能",
  "author": {
    "name": "Bozhu12",
    "email": "Bozhu12@foxmail.com",
    "url": "https://github.com/Bozhu12"
  },
  "license": "MIT",
  "keywords": ["productivity", "chinese", "windows", "fullstack", "devtools"],
  "requires": {
    "claudeCode": ">=2.0.0"
  },
  "components": {
    "commands": [
      "commands/**/*.md"
    ],
    "agents": [
      "agents/**/*.md"
    ],
    "hooks": [
      "hooks/**/*.ps1",
      "hooks/**/*.bat"
    ],
    "outputStyles": [
      "output-styles/**/*.md"
    ]
  },
  "activation": {
    "always": true,
    "suggests": {
      "when": "project.hasFile('package.json')",
      "message": "检测到 Node.js 项目,推荐使用 /quick-start 快速开始开发"
    }
  },
  "settings": {
    "defaultLanguage": "zh-CN",
    "platform": "windows",
    "shellType": "powershell"
  }
}
